---
// Henter parametrene fra Astro.props
const { htmlheading = "h2", size = "medium", font = "sans", styling = "medium", transform = "none" } = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  xlarge: "lg:text-computer-h1 text-mobile-h1",
  large: "lg:text-computer-h2 text-mobile-h2",
  medium: "lg:text-computer-h3 text-mobile-h3",
  small: "lg:text-computer-h4 text-mobile-h4",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
  display: "font-heading",
  body: "font-body",
};

const stylingClasses = {
  medium: "font-medium",
  light: "font-light",
};
const transformClasses = {
  uppercase: "uppercase",
  none: "",
};
---

<Htmlheading class:list={[stylingClasses[styling], sizeClasses[size], fontClasses[font], transformClasses[transform]]}><slot /></Htmlheading>
